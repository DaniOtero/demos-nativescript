<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <StackLayout>
        <Image width="100%" src="~/images/autentia.png" tap="{{onTap}}" visibility="{{imageVisibility}}"></Image>
        <Label text="Touch the image and see what happends"></Label>
        <Slider value="{{animationMs}}" minValue="250" maxValue="2000"></Slider>
        <Switch checked="{{showImage}}"></Switch>
        <Button text="Enough, get me out of here!" tap="{{getMeOutOfHere}}"></Button>
    </StackLayout>
</Page>
